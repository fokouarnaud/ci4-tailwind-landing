# Configuration pour Railway Production
# Ne pas committer ce fichier avec des vraies valeurs

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = ''
app.forceGlobalSecureRequests = true
app.indexPage = ''

#--------------------------------------------------------------------
# RAILWAY SPECIFIC
#--------------------------------------------------------------------
# Le port sera automatiquement d√©fini par Railway
# PORT sera fourni par Railway

#--------------------------------------------------------------------
# DATABASE (Supabase example)
#--------------------------------------------------------------------
# database.default.hostname = your-supabase-host.supabase.co
# database.default.database = postgres
# database.default.username = postgres
# database.default.password = your-supabase-password
# database.default.DBDriver = Postgre
# database.default.port = 5432

#--------------------------------------------------------------------
# EMAIL (Resend example)
#--------------------------------------------------------------------
# email.SMTPHost = smtp.resend.com
# email.SMTPUser = resend
# email.SMTPPass = your-resend-api-key
# email.SMTPPort = 587
# email.SMTPCrypto = tls

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------
cache.handler = file
cache.storePath = writable/cache/

#--------------------------------------------------------------------
# SESSIONS
#--------------------------------------------------------------------
session.driver = CodeIgniter\Session\Handlers\FileHandler
session.cookieName = ci_session
session.expiration = 7200
session.savePath = writable/session
session.regenerateDestroy = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------
logger.threshold = 4
